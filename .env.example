# ===========================================
# Environment Configuration
# Copy this file to .env and fill in your values
# ===========================================

# Application
APP_NAME="Web Final Project"
APP_DEBUG=false

# Base URL (IMPORTANT!)
# For LOCAL development with Laragon: APP_URL=/web_final_project/public
# For PRODUCTION on Render: APP_URL= (leave empty or don't set)
APP_URL=

# ===========================================
# Database Configuration
# ===========================================

# Database Driver: 'pgsql' for PostgreSQL, 'mysql' for MySQL
DB_DRIVER=pgsql

# For Supabase (Production)
DB_HOST=your-project.supabase.co
DB_PORT=6543
DB_DATABASE=postgres
DB_USERNAME=postgres.your-project
DB_PASSWORD=your-password
DB_SSLMODE=require

# For Local Development (MySQL with Laragon)
# DB_DRIVER=mysql
# DB_HOST=localhost
# DB_PORT=3306
# DB_DATABASE=web_final_project
# DB_USERNAME=root
# DB_PASSWORD=
